spec_version: 2
description: Simple s3 buckets provisioning

inputs:
  bucket_1_name:
    type: string
    display-style: normal
    default: "Bucket1_Name"
    description: "invalid name for bucket edited to test autoupdate"

outputs:
  bucket_1:
    value: '{{ .grains.bucket_1.outputs.s3_bucket_arn }}'


grains:
  bucket_1:
    kind: terraform
    spec: 
      source:
        path: https://github.com/QualiNext/torque-demo.git//terraform/s3
      host:
        name: eksgmp
      inputs:
        - region: us-west-1
        - acl: private
        - name: 'demo-s3-bucket-1-{{ sandboxid | downcase }}'
      outputs:
        - s3_bucket_arn
